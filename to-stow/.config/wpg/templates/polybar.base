[colors]
background = ${xrdb:color0:#222}
foreground = ${xrdb:color7:#222}
foreground-alt = ${xrdb:color7:#222}
primary = ${xrdb:color1:#222}
secondary = ${xrdb:color2:#222}
alert = ${xrdb:color3:#222}

[bar/mybar]
;monitor = ${env:MONITOR:HDMI-1}
width = 98%
height = 27
offset-x = 1%
offset-y = 1%
radius = 9.0
fixed-center = true

background = #aa000000
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

border-size = 0
border-color = #00000000

padding-left = 2
padding-right = 2 

module-margin-left = 2
module-margin-right = 2

font-0 = Font Dejavu:size=13;2
font-1 = FontAwesome:size=12;2
font-2 = feather:size=12;2
font-3 = Iosevka Term:size=12;0

modules-left = workspaces mpd
modules-center = date
modules-right = pulseaudio network cpu memory gpu powermenu

;tray-position = right
;tray-padding = 2
;tray-background = #0063ff

;wm-restack = bspwm
;wm-restack = i3

;override-redirect = true

;scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = ns-resize

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/mpd]
type = internal/mpd
format-online =  <icon-prev>  <icon-stop>  <toggle>  <icon-next>  <label-song>    

icon-play = ï‹
icon-pause = ïŒ
icon-stop = ï
icon-prev = ïŠ
icon-next = ï

label-song-maxlen = 100
label-song-ellipsis = true
label-active-font = 4


;[module/cpu]
;type = custom/menu
;
;expand-right = flase
;
;menu-0-0 = CPU
;menu-0-0-exec = 



[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "î¥ "
format-prefix-foreground = ${colors.foreground-alt}
label = %percentage:2%%
label-active-font = 3

[module/gpu]
type = custom/script
exec = ~/.config/polybar/scripts/system-nvidia-smi.sh
format-prefix = "î¥ "
format-prefix-foreground = ${colors.foreground-alt}
label-active-font = 3

[module/memory]
type = internal/memory
interval = 2
format-prefix = "î¥” "
format-prefix-foreground = ${colors.foreground-alt}
label = %percentage_used%%
label-active-font = 3

[module/date]
type = internal/date
interval = 5

date =
date-alt = " %Y-%m-%d"

time = %H:%M
time-alt = %H:%M:%S

;format-prefix = î€–
;format-prefix-foreground = ${colors.foreground-alt}

label = %date% %time%

[module/pulseaudio]
type = internal/pulseaudio

format-volume = <label-volume> <bar-volume>
label-volume = ï€¨ %percentage%%
label-volume-foreground = ${root.foreground}

label-muted = ğŸ”‡ muted
label-muted-foreground = #666

bar-volume-width = 10
bar-volume-foreground-0 = ${colors.secondary}
bar-volume-foreground-1 = ${colors.secondary}
bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-indicator-font = 2
bar-volume-fill = â”€
bar-volume-fill-font = 2
bar-volume-empty = â”€
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${colors.foreground-alt}

[module/powermenu]
type = custom/menu

expand-right = false

format-spacing = 2

label-open = ï€‘
label-open-foreground = ${colors.secondary}
label-close = "ïœ Cancel"
label-close-foreground = ${colors.secondary}
label-separator =  
label-separator-foreground = ${colors.foreground-alt}
label-active-font = 1

menu-0-0 = "ïƒ¢ Restart"
menu-0-0-exec = reboot
menu-0-1 = "ï€‘ Shutdown"
menu-0-1-exec = poweroff


[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over
;pseudo-transparency = false

[global/wm]
margin-top = 5
margin-bottom = 5

[module/workspaces]
type = internal/xworkspaces

;Determine which font will icons come from
label-active-font = 1

; Only show workspaces defined on the same output as the bar
;
; Useful if you want to show monitor specific workspaces
; on different bars
;
; Default: false
pin-workspaces = false

; Create click handler used to focus desktop
; Default: true
enable-click = true

; Create scroll handlers used to cycle desktops
; Default: true
enable-scroll = true

; icon-[0-9]+ = <desktop-name>;<icon>
; NOTE: The desktop name needs to match the name configured by the WM
; You can get a list of the defined desktops using:
; $ xprop -root _NET_DESKTOP_NAMES
icon-0 = 1;ï„ 
icon-1 = 2;ï‚¬
icon-2 = 3;ïƒ¦
icon-3 = 4;ï„•
icon-4 = 5;ï‡¼
icon-5 = 6;ï„›
icon-default = î‡—

; Available tags:
;   <label-monitor>
;   <label-state> - gets replaced with <label-(active|urgent|occupied|empty)>
; Default: <label-state>
format = <label-state>
format-padding = 1

; Available tokens:
;   %name%
; Default: %name%
label-monitor = %name%

; Available tokens:
;   %name%
;   %icon%
;   %index%
; Default: %icon%  %name%
label-active = %icon%
label-active-foreground = ${colors.secondary}

; Available tokens:
;   %name%
;   %icon%
;   %index%
; Default: %icon%  %name%
label-occupied = %icon%
label-occupied-foreground = ${colors.foreground-alt}

; Available tokens:
;   %name%
;   %icon%
;   %index%
; Default: %icon%  %name%
label-urgent = %icon%
label-urgent-foreground = ${colors.alert}

; Available tokens:
;   %name%
;   %icon%
;   %index%
; Default: %icon%  %name%
label-empty = %icon% 

label-active-padding = 2
label-urgent-padding = 2
label-occupied-padding = 2
label-empty-padding = 2
label-separator = |
